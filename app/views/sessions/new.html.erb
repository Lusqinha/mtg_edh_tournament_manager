<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<div class="flex flex-col items-center justify-center min-h-[80vh]">
  <div class="w-full max-w-md p-8 rounded-3xl bg-[#393E46] border border-[#EEEEEE]/10 shadow-2xl">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-[#00ADB5]"><%= t("sessions.new.title") %></h1>
      <p class="text-[#EEEEEE]/60 mt-2 text-sm">Bem-vindo de volta, comandante!</p>
    </div>

    <%= form_with url: session_path, class: "space-y-6" do |form| %>
      <div class="space-y-2">
        <%= form.label :login, "Email ou Apelido", class: "text-sm font-medium text-[#EEEEEE]/80 ml-1" %>
        <%= form.text_field :login, required: true, autofocus: true, autocomplete: "username", placeholder: t("sessions.new.email_or_nickname_placeholder"), value: params[:login], class: "w-full px-4 py-3 rounded-xl bg-[#222831] border border-transparent focus:border-[#00ADB5] focus:bg-[#222831] focus:ring-0 text-[#EEEEEE] placeholder-[#EEEEEE]/40 transition-all outline-none" %>
      </div>

      <div class="space-y-2">
        <div class="flex justify-between items-center">
          <%= form.label :password, "Senha", class: "text-sm font-medium text-[#EEEEEE]/80 ml-1" %>
          <%= link_to t("sessions.new.forgot_password"), new_password_path, class: "text-xs text-[#00ADB5] hover:text-[#00ADB5]/80" %>
        </div>
        <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: t("sessions.new.password_placeholder"), maxlength: 72, class: "w-full px-4 py-3 rounded-xl bg-[#222831] border border-transparent focus:border-[#00ADB5] focus:bg-[#222831] focus:ring-0 text-[#EEEEEE] placeholder-[#EEEEEE]/40 transition-all outline-none" %>
      </div>

      <%= form.submit t("sessions.new.submit"), class: "w-full py-3.5 rounded-xl bg-[#00ADB5] text-[#EEEEEE] font-bold shadow-lg shadow-[#00ADB5]/20 hover:shadow-[#00ADB5]/40 hover:scale-[1.02] active:scale-[0.98] transition-all cursor-pointer" %>
    <% end %>

    <div class="mt-8 text-center text-sm text-[#EEEEEE]/60">
      NÃ£o tem uma conta? 
      <%= link_to t("sessions.new.sign_up"), new_registration_path, class: "text-[#00ADB5] font-medium hover:text-[#00ADB5]/80 ml-1" %>
    </div>
  </div>
</div>
