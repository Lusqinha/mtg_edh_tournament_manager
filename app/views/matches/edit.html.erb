<div class="max-w-4xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-theme-text mb-2">Finalizar Partida</h1>
    <div class="flex items-center gap-2 text-theme-text/60">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span>Iniciada em <%= l @match.played_at, format: :short %></span>
      <span class="w-1 h-1 rounded-full bg-theme-surface"></span>
      <span><%= ((Time.current - @match.played_at) / 60).to_i %> min de duração</span>
    </div>
  </div>

  <%= form_with model: [@tournament, @match], class: "space-y-8" do |form| %>
    <% if @match.errors.any? %>
      <div class="bg-red-500/10 border border-red-500/20 rounded-2xl p-6 text-red-200">
        <h2 class="font-bold text-lg mb-2 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
          </svg>
          <%= pluralize(@match.errors.count, "erro") %> impediram esta partida de ser salva:
        </h2>
        <ul class="list-disc list-inside space-y-1 opacity-80">
          <% @match.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-4">
      <h3 class="text-xl font-bold text-theme-text flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-theme-primary">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
        </svg>
        Resultados dos Jogadores
      </h3>
      
      <div class="grid grid-cols-1 gap-4">
        <%= form.fields_for :match_results do |result_form| %>
          <div class="bg-theme-surface rounded-2xl border border-theme-text/10 p-6 hover:border-theme-primary/30 transition-all">
            <div class="flex items-center gap-3 mb-6 pb-4 border-b border-theme-text/5">
              <div class="w-10 h-10 rounded-full bg-theme-primary flex items-center justify-center text-theme-text font-bold text-lg">
                <%= result_form.object.user.nickname[0].upcase %>
              </div>
              <strong class="text-lg text-theme-text"><%= result_form.object.user.nickname %></strong>
            </div>
            
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
              <div class="space-y-2">
                <%= result_form.label :score, "Pontuação", class: "text-xs font-bold text-theme-text/60 uppercase tracking-wider" %>
                <%= result_form.number_field :score, class: "w-full px-4 py-3 rounded-xl bg-theme-base border border-transparent focus:border-theme-primary focus:bg-theme-base focus:ring-0 text-theme-text transition-all outline-none font-mono text-lg" %>
              </div>
              
              <div class="space-y-2">
                <%= result_form.label :eliminations, "Eliminações", class: "text-xs font-bold text-theme-text/60 uppercase tracking-wider" %>
                <%= result_form.number_field :eliminations, class: "w-full px-4 py-3 rounded-xl bg-theme-base border border-transparent focus:border-theme-primary focus:bg-theme-base focus:ring-0 text-theme-text transition-all outline-none font-mono text-lg" %>
              </div>
              
              <div class="space-y-2">
                <%= result_form.label :commander_damage, "Dano Cmdr", class: "text-xs font-bold text-theme-text/60 uppercase tracking-wider" %>
                <%= result_form.number_field :commander_damage, class: "w-full px-4 py-3 rounded-xl bg-theme-base border border-transparent focus:border-theme-primary focus:bg-theme-base focus:ring-0 text-theme-text transition-all outline-none font-mono text-lg" %>
              </div>
              
              <div class="space-y-2">
                <%= result_form.label :final_life, "Vida Final", class: "text-xs font-bold text-theme-text/60 uppercase tracking-wider" %>
                <%= result_form.number_field :final_life, class: "w-full px-4 py-3 rounded-xl bg-theme-base border border-transparent focus:border-theme-primary focus:bg-theme-base focus:ring-0 text-theme-text transition-all outline-none font-mono text-lg" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="bg-theme-surface rounded-2xl border border-theme-text/10 p-6">
      <div class="space-y-2">
        <%= form.label :winner_id, "Vencedor da Partida", class: "text-sm font-bold text-theme-text flex items-center gap-2" %>
        <%= form.collection_select :winner_id, @match.users, :id, :nickname, { include_blank: "Selecione o vencedor (opcional)" }, { class: "w-full px-4 py-3 rounded-xl bg-theme-base border border-transparent focus:border-theme-primary focus:bg-theme-base focus:ring-0 text-theme-text transition-all outline-none" } %>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row gap-4 pt-4 border-t border-theme-text/5">
      <%= form.submit "Finalizar Partida", class: "flex-1 py-3.5 rounded-xl bg-theme-primary text-theme-text font-bold hover:bg-theme-primary/90 transition-all shadow-lg shadow-theme-primary/20 cursor-pointer" %>
      <%= link_to "Cancelar", @tournament, class: "px-8 py-3.5 rounded-xl bg-theme-surface text-theme-text/80 font-medium hover:bg-theme-surface/80 transition-colors text-center" %>
    </div>
  <% end %>
</div>
