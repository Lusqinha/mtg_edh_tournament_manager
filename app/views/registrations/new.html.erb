<div class="flex flex-col items-center justify-center min-h-[80vh]">
  <div class="w-full max-w-md p-8 rounded-3xl bg-[#393E46] border border-[#EEEEEE]/10 shadow-2xl">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-[#00ADB5]"><%= t("registrations.new.title") %></h1>
      <p class="text-[#EEEEEE]/60 mt-2 text-sm">Junte-se à liga e domine o mesão!</p>
    </div>

    <%= form_with model: @user, url: registration_path, class: "space-y-5" do |form| %>
      <% if @user.errors.any? %>
        <div class="p-4 rounded-xl bg-red-500/10 border border-red-500/20 text-red-400 text-sm">
          <h2 class="font-bold mb-2"><%= t("registrations.new.errors_title", count: @user.errors.count) %></h2>
          <ul class="list-disc list-inside space-y-1 opacity-80">
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-2">
        <%= form.label :email_address, "Email", class: "text-sm font-medium text-[#EEEEEE]/80 ml-1" %>
        <%= form.email_field :email_address, required: true, autofocus: true, class: "w-full px-4 py-3 rounded-xl bg-[#222831] border border-transparent focus:border-[#00ADB5] focus:bg-[#222831] focus:ring-0 text-[#EEEEEE] placeholder-[#EEEEEE]/40 transition-all outline-none" %>
      </div>

      <div class="space-y-2">
        <%= form.label :nickname, "Apelido", class: "text-sm font-medium text-[#EEEEEE]/80 ml-1" %>
        <%= form.text_field :nickname, required: true, class: "w-full px-4 py-3 rounded-xl bg-[#222831] border border-transparent focus:border-[#00ADB5] focus:bg-[#222831] focus:ring-0 text-[#EEEEEE] placeholder-[#EEEEEE]/40 transition-all outline-none" %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div class="space-y-2">
          <%= form.label :password, "Senha", class: "text-sm font-medium text-[#EEEEEE]/80 ml-1" %>
          <%= form.password_field :password, required: true, minlength: 8, class: "w-full px-4 py-3 rounded-xl bg-[#222831] border border-transparent focus:border-[#00ADB5] focus:bg-[#222831] focus:ring-0 text-[#EEEEEE] placeholder-[#EEEEEE]/40 transition-all outline-none" %>
        </div>

        <div class="space-y-2">
          <%= form.label :password_confirmation, "Confirmar", class: "text-sm font-medium text-[#EEEEEE]/80 ml-1" %>
          <%= form.password_field :password_confirmation, required: true, minlength: 8, class: "w-full px-4 py-3 rounded-xl bg-[#222831] border border-transparent focus:border-[#00ADB5] focus:bg-[#222831] focus:ring-0 text-[#EEEEEE] placeholder-[#EEEEEE]/40 transition-all outline-none" %>
        </div>
      </div>

      <%= form.submit t("registrations.new.submit"), class: "w-full py-3.5 rounded-xl bg-[#00ADB5] text-[#EEEEEE] font-bold shadow-lg shadow-[#00ADB5]/20 hover:shadow-[#00ADB5]/40 hover:scale-[1.02] active:scale-[0.98] transition-all cursor-pointer mt-4" %>
    <% end %>

    <div class="mt-8 text-center text-sm text-[#EEEEEE]/60">
      Já tem uma conta? 
      <%= link_to t("registrations.new.sign_in"), new_session_path, class: "text-[#00ADB5] font-medium hover:text-[#00ADB5]/80 ml-1" %>
    </div>
  </div>
</div>
