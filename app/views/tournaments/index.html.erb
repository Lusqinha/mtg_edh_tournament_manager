<div class="flex justify-between items-center mb-8">
  <h1 class="text-3xl font-bold text-theme-text">Torneios</h1>
  <%= link_to new_tournament_path, class: "hidden sm:flex items-center gap-2 px-4 py-2 rounded-full bg-theme-primary text-theme-text font-medium hover:bg-theme-primary/80 transition-colors" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
    </svg>
    Novo Torneio
  <% end %>
</div>

<div class="grid grid-cols-1 gap-4">
  <% @tournaments.each do |tournament| %>
    <%= link_to tournament, class: "group block p-5 rounded-2xl bg-theme-surface border border-theme-text/5 hover:border-theme-primary/50 transition-all hover:shadow-lg hover:shadow-theme-primary/10" do %>
      <div class="flex justify-between items-start mb-3">
        <div>
          <h3 class="text-lg font-bold text-theme-text group-hover:text-theme-primary transition-colors"><%= tournament.name %></h3>
          <p class="text-xs text-theme-text/40 mt-1">Criado por <span class="text-theme-text/80"><%= tournament.created_by.nickname %></span></p>
        </div>
        <div class="px-3 py-1 rounded-full bg-theme-base text-xs font-medium text-theme-text/60 border border-theme-text/5">
          <%= l tournament.created_at, format: :short %>
        </div>
      </div>
      
      <div class="flex items-center gap-6 text-sm text-theme-text/60">
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
          </svg>
          <span><%= tournament.users.count %> participantes</span>
        </div>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
          </svg>
          <span><%= tournament.matches.count %> partidas</span>
        </div>
      </div>
    <% end %>
  <% end %>
  
  <% if @tournaments.empty? %>
    <div class="text-center py-12 rounded-2xl bg-theme-surface border border-dashed border-theme-text/10">
      <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-theme-base flex items-center justify-center text-theme-text/40">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-theme-text">Nenhum torneio encontrado</h3>
      <p class="text-theme-text/40 mt-1">Crie o primeiro torneio para come√ßar a liga!</p>
      <%= link_to "Criar Torneio", new_tournament_path, class: "inline-block mt-4 px-6 py-2 rounded-full bg-theme-primary text-theme-text font-bold hover:bg-theme-primary/80 transition-colors sm:hidden" %>
    </div>
  <% end %>
</div>
