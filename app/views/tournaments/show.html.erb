<div class="mb-8">
  <div class="flex items-center gap-4 mb-6">
    <%= link_to tournaments_path, class: "p-2 rounded-full hover:bg-theme-text/10 transition-colors" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-theme-text/60">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
    <% end %>
    <div>
      <h1 class="text-2xl font-bold text-theme-text"><%= @tournament.name %></h1>
      <p class="text-sm text-theme-text/40">Organizado por <%= @tournament.created_by.nickname %></p>
    </div>
  </div>

  <% if @tournament.organizers.include?(Current.user) %>
    <div class="flex gap-3 mb-8 overflow-x-auto pb-2">
      <%= link_to new_tournament_match_path(@tournament), class: "flex items-center gap-2 px-5 py-2.5 rounded-full bg-theme-primary text-theme-text font-bold text-sm hover:bg-theme-primary/80 transition-colors whitespace-nowrap shadow-lg shadow-theme-primary/20" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z" />
        </svg>
        Iniciar Partida
      <% end %>
      
      <button onclick="document.getElementById('add-player-modal').classList.remove('hidden')" class="flex items-center gap-2 px-5 py-2.5 rounded-full bg-theme-base text-theme-text font-medium text-sm hover:bg-theme-base/80 transition-colors whitespace-nowrap border border-theme-text/5">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
        </svg>
        Adicionar Jogador
      </button>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Ranking Section -->
    <div class="lg:col-span-1 space-y-4">
      <h3 class="text-lg font-bold text-theme-text flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-yellow-500">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 18.75h-9m9 0a3 3 0 013 3h-15a3 3 0 013-3m9 0v-3.375c0-.621-.504-1.125-1.125-1.125h-.871M7.5 18.75v-3.375c0-.621.504-1.125 1.125-1.125h.872m5.007 0H9.497m5.007 0V5.625a2.25 2.25 0 11-4.5 0v3.375M12 12h0.01" />
        </svg>
        Classificação
      </h3>
      
      <div class="bg-theme-surface rounded-2xl border border-theme-text/5 overflow-hidden">
        <% @participants.each_with_index do |participant, index| %>
          <div class="flex items-center justify-between p-4 border-b border-theme-text/5 last:border-0 hover:bg-theme-base/50 transition-colors">
            <div class="flex items-center gap-4">
              <div class="w-8 h-8 flex items-center justify-center rounded-full font-bold text-sm <%= index == 0 ? 'bg-yellow-500/20 text-yellow-500' : (index == 1 ? 'bg-theme-text/10 text-theme-text/60' : (index == 2 ? 'bg-orange-500/20 text-orange-500' : 'bg-theme-base/50 text-theme-text/40')) %>">
                <%= index + 1 %>
              </div>
              <span class="font-medium text-theme-text"><%= participant.user.nickname %></span>
            </div>
            <div class="font-bold text-theme-text"><%= participant.score %> <span class="text-xs font-normal text-theme-text/40">pts</span></div>
          </div>
        <% end %>
        
        <% if @participants.empty? %>
          <div class="p-8 text-center text-theme-text/40 text-sm">
            Nenhum participante inscrito.
          </div>
        <% end %>
      </div>
    </div>

    <!-- Matches Section -->
    <div class="lg:col-span-2 space-y-4">
      <h3 class="text-lg font-bold text-theme-text flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-theme-primary">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
        </svg>
        Partidas
      </h3>

      <div class="space-y-3">
        <% @matches.each do |match| %>
          <div class="bg-theme-surface rounded-2xl border border-theme-text/5 p-5 hover:border-theme-primary/30 transition-all">
            <div class="flex justify-between items-start mb-4">
              <div>
                <span class="text-xs font-bold uppercase tracking-wider text-theme-primary">Rodada <%= match.round %></span>
                <div class="text-xs text-theme-text/40 mt-1">
                  <%= l match.played_at, format: :short %>
                  <% if match.duration %>
                    • <%= match.duration / 60 %> min
                  <% end %>
                </div>
              </div>
              
              <% if match.winner %>
                <div class="px-3 py-1 rounded-full bg-green-500/10 text-green-400 text-xs font-bold border border-green-500/20">
                  Vencedor: <%= match.winner.nickname %>
                </div>
              <% else %>
                <div class="flex items-center gap-2">
                  <span class="px-3 py-1 rounded-full bg-yellow-500/10 text-yellow-400 text-xs font-bold border border-yellow-500/20 animate-pulse">
                    Em andamento
                  </span>
                  <% if @tournament.organizers.include?(Current.user) %>
                    <%= link_to "Finalizar", edit_tournament_match_path(@tournament, match), class: "text-xs font-bold text-theme-primary hover:text-theme-primary/80 hover:underline" %>
                  <% end %>
                </div>
              <% end %>
            </div>

            <div class="flex flex-wrap gap-2">
              <% match.match_results.includes(:user).each do |result| %>
                <div class="px-3 py-1.5 rounded-lg bg-theme-base text-sm text-theme-text/80 flex items-center gap-2 border border-theme-text/5">
                  <span><%= result.user.nickname %></span>
                  <% if result.score %>
                    <span class="px-1.5 py-0.5 rounded bg-theme-base/50 text-xs font-bold text-theme-text"><%= result.score %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if @matches.empty? %>
          <div class="p-12 rounded-2xl bg-theme-surface border border-dashed border-theme-text/10 text-center">
            <p class="text-theme-text/40">Nenhuma partida registrada ainda.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Add Player Modal -->
<div id="add-player-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm p-4">
  <div class="w-full max-w-md bg-theme-surface rounded-3xl border border-theme-text/10 shadow-2xl p-6">
    <h3 class="text-xl font-bold text-theme-text mb-4">Adicionar Jogador</h3>
    
    <%= form_with url: tournament_participants_path(@tournament), class: "space-y-4" do |form| %>
      <div class="space-y-2">
        <%= form.label :user_id, "Selecione o jogador", class: "text-sm font-medium text-theme-text/80" %>
        <%= form.collection_select :user_id, User.where.not(id: @tournament.user_ids), :id, :nickname, { prompt: "Escolha um usuário..." }, { class: "w-full px-4 py-3 rounded-xl bg-theme-base border border-transparent focus:border-theme-primary focus:bg-theme-base/80 focus:ring-0 text-theme-text transition-all outline-none" } %>
      </div>
      
      <div class="flex gap-3 pt-2">
        <%= form.submit "Adicionar", class: "flex-1 py-3 rounded-xl bg-theme-primary text-theme-text font-bold hover:bg-theme-primary/80 transition-colors cursor-pointer" %>
        <button type="button" onclick="document.getElementById('add-player-modal').classList.add('hidden')" class="px-6 py-3 rounded-xl bg-theme-base text-theme-text/60 font-medium hover:bg-theme-base/80 transition-colors">Cancelar</button>
      </div>
    <% end %>
  </div>
</div>
