<div class="max-w-2xl mx-auto">
  <div class="flex items-center gap-4 mb-8">
    <%= link_to tournaments_path, class: "p-2 rounded-full hover:bg-theme-text/10 transition-colors" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-theme-text/60">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
    <% end %>
    <h1 class="text-2xl font-bold text-theme-text">Novo Torneio</h1>
  </div>

  <div class="p-6 rounded-3xl bg-theme-surface border border-theme-text/5 shadow-xl">
    <%= form_with model: @tournament, class: "space-y-6" do |form| %>
      <% if @tournament.errors.any? %>
        <div class="p-4 rounded-xl bg-red-500/10 border border-red-500/20 text-red-400 text-sm">
          <h2 class="font-bold mb-2"><%= pluralize(@tournament.errors.count, "erro") %> impediram este torneio de ser salvo:</h2>
          <ul class="list-disc list-inside space-y-1 opacity-80">
            <% @tournament.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-2">
        <%= form.label :name, "Nome do Torneio", class: "text-sm font-medium text-theme-text/80 ml-1" %>
        <%= form.text_field :name, class: "w-full px-4 py-3 rounded-xl bg-theme-base border border-transparent focus:border-theme-primary focus:bg-theme-base/80 focus:ring-0 text-theme-text placeholder-theme-text/40 transition-all outline-none", required: true, autofocus: true, placeholder: "Ex: Liga Commander 2025" %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div class="space-y-2">
          <%= form.label :number_of_rounds, "Número de Rodadas", class: "text-sm font-medium text-theme-text/80 ml-1" %>
          <%= form.number_field :number_of_rounds, class: "w-full px-4 py-3 rounded-xl bg-theme-base border border-transparent focus:border-theme-primary focus:bg-theme-base/80 focus:ring-0 text-theme-text placeholder-theme-text/40 transition-all outline-none", placeholder: "Opcional" %>
        </div>

        <div class="space-y-2">
          <%= form.label :max_players, "Máximo de Jogadores", class: "text-sm font-medium text-theme-text/80 ml-1" %>
          <%= form.number_field :max_players, class: "w-full px-4 py-3 rounded-xl bg-theme-base border border-transparent focus:border-theme-primary focus:bg-theme-base/80 focus:ring-0 text-theme-text placeholder-theme-text/40 transition-all outline-none", placeholder: "Opcional" %>
        </div>
      </div>

      <div class="pt-4 flex gap-3">
        <%= form.submit "Criar Torneio", class: "flex-1 py-3.5 rounded-xl bg-theme-primary text-theme-text font-bold hover:bg-theme-primary/80 transition-colors cursor-pointer" %>
        <%= link_to "Cancelar", tournaments_path, class: "px-6 py-3.5 rounded-xl bg-theme-base text-theme-text/60 font-medium hover:bg-theme-base/80 transition-colors text-center" %>
      </div>
    <% end %>
  </div>
</div>
