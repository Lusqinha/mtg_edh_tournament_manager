<div class="min-h-[80vh] flex items-center justify-center px-4">
  <div class="w-full max-w-md bg-theme-surface rounded-3xl border border-theme-text/10 p-8 shadow-2xl">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-theme-text mb-2"><%= t("passwords.edit.title") %></h1>
      <p class="text-theme-text/60 text-sm">Crie uma nova senha segura</p>
    </div>

    <% if flash[:alert] %>
      <div class="mb-6 p-4 rounded-xl bg-red-500/10 border border-red-500/20 text-red-200 text-sm text-center">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: password_path(params[:token]), method: :put, class: "space-y-6" do |form| %>
      <div class="space-y-2">
        <%= form.label :password, "Nova Senha", class: "text-sm font-bold text-theme-text/80 ml-1" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: t("passwords.edit.password_placeholder"), maxlength: 72, class: "w-full px-4 py-3 rounded-xl bg-theme-base border border-transparent focus:border-theme-primary focus:bg-theme-base focus:ring-0 text-theme-text transition-all outline-none placeholder-theme-text/40" %>
      </div>

      <div class="space-y-2">
        <%= form.label :password_confirmation, "Confirmar Nova Senha", class: "text-sm font-bold text-theme-text/80 ml-1" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: t("passwords.edit.password_confirmation_placeholder"), maxlength: 72, class: "w-full px-4 py-3 rounded-xl bg-theme-base border border-transparent focus:border-theme-primary focus:bg-theme-base focus:ring-0 text-theme-text transition-all outline-none placeholder-theme-text/40" %>
      </div>

      <%= form.submit t("passwords.edit.submit"), class: "w-full py-3.5 rounded-xl bg-theme-primary text-theme-text font-bold hover:bg-theme-primary/90 transition-all shadow-lg shadow-theme-primary/20 cursor-pointer" %>
    <% end %>
  </div>
</div>
